const prefix = (server && server.tag) || Files.data.settings.tag;
const args = msg.content.replace(prefix, '').split(/ +/g);
const fs = require('fs');
const path = './resources/dev.txt';
if (!require(path)) {
   fs.appendFileSync(path, '');
}
const data = fs.readFileSync(path, 'utf-8');
const id = String(args[2]);

if(args[1] == "add" && args.length > 1){
	if(data.includes(id)){
		msg.channel.send('This user is already a bot dev!');
	}else{
		fs.appendFileSync(path, ','+id, 'utf8');
		msg.channel.send(`Added \`${id}\` to bot dev list!`);
	}
}else if(args[1] == "remove" && args.length > 1){
	if(data.includes(id)){
		var newValue = data.replace(','+new RegExp(id), '');
		fs.writeFileSync(path, newValue, 'utf-8');
		msg.channel.send(`Removed \`${id}\` from bot dev list!`);
	}else{
		msg.channel.send(`That user is not a bot dev`);
	}
}else{
	msg.channel.send(`Incorrect Usage. Please use \`${prefix}dev [add|remove] <user>\``);
}
